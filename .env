# Django
DJANGO_SECRET_KEY=changeme_now_replace_with_strong_key
DJANGO_DEBUG=False
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# Database
POSTGRES_DB=login_db
POSTGRES_USER=login_user
POSTGRES_PASSWORD=verysecurepassword

# Redis
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0

# JWT (paths or content will be read by settings)
JWT_PRIVATE_KEY_PATH=/secrets/private_key.pem
JWT_PUBLIC_KEY_PATH=/secrets/public_key.pem
JWT_ALGORITHM=RS256

# Email (dev using mailhog)
EMAIL_HOST=mailhog
EMAIL_PORT=1025
DEFAULT_FROM_EMAIL=no-reply@example.com

# Security
PASSWORD_MIN_LENGTH=12
