# ==================== PRODUCCIÓN ====================
DEBUG=False
DJANGO_SECRET_KEY=genera-una-clave-segura-unica-aqui-usando-python-manage.py-generatesecretkey
DJANGO_ALLOWED_HOSTS=tudominio.com,www.tudominio.com

# PostgreSQL de producción
POSTGRES_DB=login_production
POSTGRES_USER=login_user
POSTGRES_PASSWORD=clave_super_segura_generada_aleatoria
POSTGRES_HOST=localhost  # O la IP de tu servidor DB
POSTGRES_PORT=5432

# Email real para envío de tokens
EMAIL_HOST=smtp.gmail.com  # O tu proveedor
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu_email@gmail.com
EMAIL_HOST_PASSWORD=tu_app_password_gmail  # No tu contraseña normal
DEFAULT_FROM_EMAIL=noreply@tudominio.com

# Redis producción
REDIS_HOST=localhost
REDIS_PORT=6379

# CORS - Tu dominio real
CORS_ALLOWED_ORIGINS=https://tudominio.com,https://www.tudominio.com
CSRF_TRUSTED_ORIGINS=https://tudominio.com,https://www.tudominio.com

# SSL
SECURE_SSL_REDIRECT=True

# JWT
JWT_PRIVATE_KEY_PATH=/etc/ssl/private/jwt-private.pem  # Ruta en servidor
JWT_PUBLIC_KEY_PATH=/etc/ssl/certs/jwt-public.pem      # Ruta en servidor
JWT_ALGORITHM=RS256

# Security
PASSWORD_MIN_LENGTH=12
